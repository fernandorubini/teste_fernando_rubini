<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package= "br.com.fernandorubini.teste_fernando_rubini">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission." />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:allowBackup="true"
        android:name=".DigioApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Teste_fernando_rubini">
        <activity android:name=".splash.ui.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.ui.LoginActivity"
            android:screenOrientation="portrait"

            android:exported="false" />
        <activity
            android:name=".home.ui.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".register.success.ui.SuccessActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".register.forms.ui.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".register.starter.ui.StarterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
    </application>

</manifest>